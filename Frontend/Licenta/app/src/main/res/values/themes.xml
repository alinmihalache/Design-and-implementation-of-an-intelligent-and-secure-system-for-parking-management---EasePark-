<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Test" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- Custom style for the DatePickerDialog -->
    <style name="CustomDatePickerDialogTheme" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="colorPrimary">@color/purple_500</item> <!-- Header background -->
        <item name="colorSecondary">@color/purple_500</item> <!-- Day selection circle, OK/Cancel buttons -->
        <item name="colorOnPrimary">@color/white</item> <!-- Header text -->
        <item name="colorSurface">@color/white</item> <!-- Dialog background -->
        <item name="colorOnSurface">@color/black</item> <!-- Date numbers -->
    </style>

    <!-- Custom style for the TimePickerDialog -->
    <style name="CustomTimePickerDialogTheme" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="colorPrimary">@color/purple_500</item> <!-- Header background, clock hand, OK/Cancel buttons -->
        <item name="colorSecondary">@color/purple_500</item> <!-- Clock selection circle -->
        <item name="colorOnPrimary">@color/white</item> <!-- Header text -->
        <item name="colorSurface">@color/white</item> <!-- Dialog background -->
        <item name="colorOnSurface">@color/black</item> <!-- Clock numbers -->
    </style>

    <style name="AppDialogTheme" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <!-- Background Color -->
        <item name="colorSurface">@color/white</item>
        <!-- Title and Body Text Color -->
        <item name="colorOnSurface">@color/black</item>
        <!-- Button and Active Input Color -->
        <item name="colorPrimary">@color/purple_500</item>
        <!-- Button Text Color -->
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary (e.g., for disabled states) -->
        <item name="colorSecondary">@color/purple_200</item>
    </style>
</resources>